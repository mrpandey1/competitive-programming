n=int(input())
k=int(input())
arr=[]
ans=float('inf')
for i in range(n):
    arr.append(int(input()))
arr.sort()
for i in range(len(arr)-k+1):
    ans=min(ans,(arr[i+k-1]-arr[i]))
print(ans)
